@{
    ViewData["Title"] = "Transação de Débito";
}

<h2>Transação de Débito</h2>

<form asp-action="Debito" method="post">
    @if (ViewData.ModelState.ContainsKey(""))
    {
        <div class="alert alert-danger" role="alert">
            @Html.ValidationSummary()
        </div>
    }

    <div class="form-group">
        <label for="clienteId">Selecione o Cliente:</label>
        <select class="form-control" id="clienteId" name="clienteId">
            @foreach (var cliente in Model)
            {
                <option value="@cliente.Id">@cliente.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="valor">Valor:</label>
        <input type="number" class="form-control" id="valor" name="valor" required>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-primary">Confirmar Débito</button>
</form>
