@model IEnumerable<SaldoFacil.Model.Models.Entities.Clientes>

@{
    ViewData["Title"] = "Transação de Crédito";
}

<h2>Transação de Crédito</h2>

<form asp-action="Credito" method="post">
    <div class="form-group">
        <label for="clienteId">Selecione o Cliente:</label>
        <select class="form-control" id="clienteId" name="clienteId">
            @foreach (var cliente in Model)
            {
                <option value="@cliente.Id">@cliente.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="valor">Valor:</label>
        <input type="number" class="form-control" id="valor" name="valor" required>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-primary">Confirmar Crédito</button>
</form>
